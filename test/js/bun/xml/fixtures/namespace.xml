      <config:credentials>
        <config:username>app_user</config:username>
        <config:password encrypted="true">c2VjcmV0</config:password>
      </config:credentials>
    </config:database>
    
    <config:services>
      <config:service name="auth" enabled="true">
        <config:endpoint>https://auth.example.com</config:endpoint>
